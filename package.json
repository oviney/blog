{
  "name": "economist-blog-v5",
  "version": "1.0.0",
  "description": "Software engineering insights on quality, testing, and AI - written in The Economist's signature style.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "npm run test:visual && npm run test:a11y && npm run test:lighthouse && npm run test:playwright",
    "test:visual:reference": "backstop reference",
    "test:visual": "backstop test",
    "test:visual:approve": "backstop approve",
    "test:a11y": "pa11y-ci",
    "test:lighthouse": "lhci autorun",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "test:agents:plan": "playwright plan --output=specs/",
    "test:agents:generate": "playwright generate --from-specs=specs/",
    "test:agents:heal": "playwright heal --interactive",
    "test:security": "npm audit --audit-level=moderate",
    "pretest": "echo 'Ensure Jekyll is running on port 4000 before running tests'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oviney/blog.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oviney/blog/issues"
  },
  "homepage": "https://github.com/oviney/blog#readme",
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "backstopjs": "^6.3.25",
    "lighthouse": "^12.8.2",
    "pa11y-ci": "^4.0.1"
  }
}
